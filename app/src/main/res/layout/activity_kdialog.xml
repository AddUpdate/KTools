<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_create_simple_text_dialog"
            style="@style/KButton"
            android:text="简单文字对话框"
            android:background="#f44336"
            />

        <Button
            android:id="@+id/btn_single_choice_dialog"
            style="@style/KButton"
            android:text="单选对话框"
            android:background="#E91E63"
            />

        <Button
            android:id="@+id/btn_multi_choices_dialog"
            style="@style/KButton"
            android:text="多选对话框"
            android:background="#9C27B0"/>

        <Button
            android:id="@+id/btn_progress_dialog_simple"
            style="@style/KButton"
            android:text="简单进度条对话框"
            android:background="#673AB7"/>

        <Button
            android:id="@+id/btn_progress_dialog_indeterminate"
            style="@style/KButton"
            android:text="进度条对话框(indeterminate)"
            android:background="#3F51B5"/>

        <Button
            android:id="@+id/btn_input_dialog"
            style="@style/KButton"
            android:text="输入信息的对话框"
            android:background="#2196F3"/>

        <Button
            android:id="@+id/btn_choose_date_dialog"
            style="@style/KButton"
            android:text="日期选择对话框"
            android:background="#03A9F4"/>

        <Button
            android:id="@+id/btn_choose_time_dialog"
            style="@style/KButton"
            android:text="时间选择对话框"
            android:background="#00BCD4"/>

        <Button
            android:id="@+id/btn_web_view_dialog"
            style="@style/KButton"
            android:text="WebView对话框"
            android:background="#009688"
            />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>